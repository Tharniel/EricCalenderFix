<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"         
             x:Class="Kalender.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout>
        <Image
            Source="kalender.png"
            HeightRequest="185"
            Aspect="AspectFit"
            SemanticProperties.Description="Kalender picture" />
        <Label 
            Text="Välkommen och logga in"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="Användarnamn: "/>
        <Entry
                x:Name="MyInputName"
                Placeholder="Skriv in ett användarnamn: "/>
        <Label 
            Text="Lösenord: "/>
        <Entry
                x:Name="MyInputPassword"
                Placeholder="Skriv in ett Lösenord: "/>

        <Button
             x:Name="SignIn"
             Text="Logga in"
             Clicked="ClickedSignInCheck"
             HorizontalOptions="Fill"/>
    </VerticalStackLayout>
</ContentPage>